# Signal Platform Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/signal_db

# Optional: Supabase Database (for production)
SUPABASE_DATABASE_URL=postgresql://postgres:password@db.your-project-ref.supabase.co:5432/postgres
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_anon_public_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# AI Services
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Social Media APIs
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
YOUTUBE_API_KEY=your_youtube_data_api_key

# Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Security
SESSION_SECRET=your_very_long_random_session_secret_key

# Optional: OpenAI Proxy (if using custom proxy)
OPENAI_PROXY_URL=https://your-proxy.onrender.com